<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_1"
        app:cardElevation="6dp">

    <LinearLayout
            android:layout_width="@dimen/preview_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/photo"
                android:layout_width="@dimen/preview_width"
                android:layout_height="@dimen/preview_height"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_listing_default"/>

        <TextView
                android:id="@+id/heading"
                android:layout_marginTop="@dimen/grid_1"
                android:layout_marginStart="@dimen/grid_1"
                android:layout_marginEnd="@dimen/grid_1"
                android:layout_marginLeft="@dimen/grid_1"
                android:layout_marginRight="@dimen/grid_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:lines="2"
                android:ellipsize="end"
                tools:text="Listing heading"/>

        <TextView
                android:id="@+id/price"
                android:layout_margin="@dimen/grid_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="$,1000.00"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>